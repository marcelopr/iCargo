<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".financeiro.FinanceiroFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvFinanceiro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvAvisoFinanceiro"
        style="@style/AvisoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawableTop="@drawable/img_wallet"
        android:text="@string/aviso_sem_registros_financeiros"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/pbFinanceiro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

</FrameLayout>