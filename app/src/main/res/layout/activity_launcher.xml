<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".LauncherActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivIconLauncher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_background_launcher"
            android:padding="12dp"
            app:layout_constraintBottom_toTopOf="@+id/tvAppNameLauncher"
            app:layout_constraintEnd_toEndOf="@+id/tvAppNameLauncher"
            app:layout_constraintStart_toStartOf="@+id/tvAppNameLauncher"
            app:srcCompat="@drawable/ic_package_white"
            android:contentDescription="@null"/>

        <TextView
            android:id="@+id/tvAppNameLauncher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:paddingTop="4dp"
            android:fontFamily="@font/nunito_light"
            android:text="@string/nome_app"
            android:textColor="@color/cinza"
            android:textSize="32sp"
            android:textStyle=""
            android:layout_gravity="bottom"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>